<% node['bind9']['zones'].each do |zone_name, zone| -%>

zone "<%= zone['name'] %>" {
    type <%= zone['type'] %>;
    file "<%= node['bind9']['base_dir'] %>/<%= zone['name'] %>";
};
<% end -%>
